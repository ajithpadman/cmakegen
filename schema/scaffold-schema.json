{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CMakeGen Metadata",
  "type": "object",
  "required": [
    "project",
    "source_tree",
    "preset_matrix"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "default": 1
    },
    "env": {
      "type": "object",
      "additionalProperties": { "type": "string" },
      "description": "User-defined variables for ${VAR} expansion. Lookup: env first, then system."
    },
    "project": {
      "type": "object",
      "required": [
        "name",
        "version"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "cmake_minimum": {
          "type": "object",
          "properties": {
            "major": {
              "type": "integer"
            },
            "minor": {
              "type": "integer"
            },
            "patch": {
              "type": "integer"
            }
          }
        }
      }
    },
    "socs": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/soc"
      }
    },
    "boards": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/board"
      }
    },
    "toolchains": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/toolchain"
      }
    },
    "isa_variants": {
      "type": "array"
    },
    "build_variants": {
      "type": "array"
    },
    "source_tree": {
      "type": "object",
      "required": [
        "components"
      ],
      "properties": {
        "components": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/component"
          }
        }
      }
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "tool_requires": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "extra_requires": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "preset_matrix": {
      "type": "object",
      "required": [
        "dimensions",
        "naming",
        "binary_dir_pattern"
      ],
      "properties": {
        "dimensions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "exclude": {
          "type": "array"
        },
        "naming": {
          "type": "string"
        },
        "binary_dir_pattern": {
          "type": "string"
        }
      }
    }
  },
  "definitions": {
    "soc": {
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "display_name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "isas": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "board": {
      "type": "object",
      "required": [
        "id",
        "socs"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "display_name": {
          "type": "string"
        },
        "socs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "defines": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "toolchain": {
      "type": "object",
      "required": [
        "id"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "display_name": {
          "type": "string"
        },
        "compiler": {
          "type": "object"
        },
        "flags": {
          "type": "object"
        },
        "libs": {
          "type": "array"
        },
        "lib_paths": {
          "type": "array"
        },
        "defines": {
          "type": "array"
        },
        "sysroot": {
          "type": "string"
        }
      }
    },
    "component": {
      "type": "object",
      "required": [
        "id",
        "type"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]+$"
        },
        "type": {
          "enum": [
            "executable",
            "library",
            "external",
            "variant",
            "layer"
          ]
        },
        "library_type": {
          "enum": [
            "static",
            "shared",
            "interface"
          ]
        },
        "structure": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "dest": {
          "type": "string"
        },
        "filters": {
          "type": "object"
        },
        "source_extensions": {
          "type": "array"
        },
        "include_extensions": {
          "type": "array"
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "conan_ref": {
          "type": "string"
        },
        "variations": {
          "type": "array"
        },
        "subdirs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "git": {
          "$ref": "#/definitions/git_source"
        }
      }
    },
    "git_source": {
      "type": "object",
      "required": [
        "url"
      ],
      "properties": {
        "url": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        },
        "branch": {
          "type": "string"
        },
        "commit": {
          "type": "string"
        }
      }
    }
  }
}