{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "linux",
      "displayName": "Linux (native)",
      "description": "Native Linux build using Ninja",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows",
      "displayName": "Windows (cross-compile)",
      "description": "Cross-compile to Windows x86_64 executable from Linux using MinGW-w64",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/windows",
      "toolchainFile": "${sourceDir}/cmake/toolchain-mingw64.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux",
      "configurePreset": "linux",
      "displayName": "Build for Linux"
    },
    {
      "name": "windows",
      "configurePreset": "windows",
      "displayName": "Build Windows .exe"
    }
  ],
  "testPresets": [
    {
      "name": "linux",
      "configurePreset": "linux",
      "displayName": "Test Linux build"
    }
  ]
}
